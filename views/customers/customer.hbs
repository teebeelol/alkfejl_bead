{{#each messages}}
<div class="alert alert-dismissible alert-{{../type}}">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Ügyfél információ</h1>
</div>

<ul class="customer-informations">
  <li class="list-group-item"><b>Felhasználónév:</b> {{customer.username}}</li>
  <li class="list-group-item"><b>Név: </b>{{customer.name}}</li>
  <li class="list-group-item"><b>Érvényesség: </b>{{customer.validityFormated}}</li>
  {{#if customer.status}}
  <li class="list-group-item"><b>Státusz: </b>Érvényes</li>
  {{else}}
  <li class="list-group-item"><b>Státusz:</b> Érvénytelen</li>
  {{/if}}
  <li class="list-group-item"><b>Telefonszám: </b>{{customer.phonenumber}}</li>
</ul>
<table class="table table-striped table-hover" id="custometickets">
    <thead>
        <tr>
            <th>Üzenet</th>
            <th>Dátum</th>
        </tr>   
    </thead>
    <tbody>
        {{#each customerMessages}}
        <tr>
            <td>{{this.message}}</td>
            <td>{{this.dateFormated}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form class="form-horizontal" method="post">
    <fieldset>
            <div class="form-group
            {{#if validationErrors.ticket}}
                has-error
            {{/if}}
            ">
            <label for="ticket" class="col-lg-2 control-label">Üzenet</label>
            <div class="col-lg-10">
                <input class="form-control" id="message" name="message" placeholder="Üzenet küldése az adott ügyfélnek." type="text" value="{{data.message}}">
                {{#if validationErrors.message}}
                    <span class="help-block">{{validationErrors.message.msg}}</span>
                {{/if}}
            </div>
            
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Küldés</button>
                </div>
            </div>
        </div>
    </fieldset>
</form>  